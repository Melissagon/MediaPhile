<!-- create handlebar for when you click on a "note" and it expands so you can see entire note. -->
      <div class="upload-list">
        <div class="note">
          <header class="note-title">
            Test Title
          <div class="username">
            username
            <time class="date" datetime="">Time</time>
          </div>
          </header>
          <div class="note-desc">
            This is where the words go.
          </div>
          <img class="image" src="https://telegra.ph/file/be265fd10e10251245d6b.jpg">
        </img>
        </div>

      </div> 

  {{#if notes.length}}
  <div class="col-md-6 project-list">
    <h3>Current Projects:</h3>

    {{#each notes as |note|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/note/{{Note.id}}">{{notes.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{Note.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>